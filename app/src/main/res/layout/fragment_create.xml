<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.create.CreateFragment">

   <LinearLayout
       android:layout_gravity="top"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <EditText
           android:id="@+id/usernameF"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="15dp"
           android:drawableStart="@drawable/ic_user_profile"
           android:drawableTint="@color/primaryDark"
           android:drawablePadding="10dp"
           android:fontFamily="@font/roboto"
           android:gravity="center_vertical"
           tools:targetApi="m"
           android:hint="Username"
           android:inputType="textPersonName"
           android:padding="10dp"
           android:textColor="@color/black"
           android:textStyle="normal"/>

       <EditText
           android:id="@+id/emailF"
           android:inputType="textEmailAddress"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="15dp"
           android:drawableStart="@android:drawable/sym_action_email"
           android:drawablePadding="10dp"
           android:fontFamily="@font/roboto"
           android:gravity="center_vertical"
           android:drawableTint="@color/primaryDark"
           android:hint="Email Address"
           tools:targetApi="m"
           android:padding="10dp"
           android:textColor="@color/black"
           android:textStyle="normal"/>

       <EditText
           android:id="@+id/passwordF"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="15dp"
           android:drawableStart="@android:drawable/ic_lock_idle_lock"
           android:drawablePadding="10dp"
           android:fontFamily="@font/roboto"
           android:gravity="center_vertical"
           android:inputType="textPassword"
           android:hint="@string/password"
           android:drawableTint="@color/primaryDark"
           android:padding="10dp"
           android:textColor="@color/black"
           tools:targetApi="m"
           android:textStyle="normal"/>

       <EditText
           android:id="@+id/cPasswordF"
           android:layout_width="match_parent"
           android:drawableTint="@color/primaryDark"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="15dp"
           android:inputType="textPassword"
           android:drawableStart="@android:drawable/ic_lock_lock"
           android:drawablePadding="10dp"
           android:fontFamily="@font/roboto"
           android:gravity="center_vertical"
           android:hint="Confirm Password"
           android:padding="10dp"
           android:textColor="@color/black"
           android:textStyle="normal"
           tools:targetApi="m" />

       <Button
           android:id="@+id/createB"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:textColor="@color/black"
           android:background="@drawable/search_bg"
           android:textStyle="bold|italic"
           android:text="@string/create"
           android:textSize="20sp"
           android:layout_margin="15dp"/>

   </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/loginPb"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>